#!python
from numpy import *
from numpy.random import *

def systematic_resample(weights):
  n = len(weights)
  w = 1./n
  indices = []
  C = [0.] + [sum(weights[:i+1]) for i in range(n)]
  j = 0
  u0 = random()*w
  for u in range(n):
    while u0+u*w > C[j]:
      j+=1
    indices.append(j-1)
  return indices

def predict(x,y,R):
  n = len(x)
  x = add(x,[random()*R for i in range(n)])
  y = add(y,[random()*R for i in range(n)])
  return x,y
